<div class="col-md-3">
    <div class="thumbnail">
        <a href="<%= @image.img_url %>"><img src="<%= @image.url_prefix <> @image.img_url %>" alt="<%= @image.name %>"></a>
        <div class="caption">
            <h4><a href="<%= @image.img_url %>"><%= @image.name %></a></h4>

            <blockquote>
            <p><%= @image.description %></p>
            <footer><%= @image.sender %></footer>
            </blockquote>
        </div>
    </div>
</div>
